{
    "manifest_version": 3,
    "name": "ZeitManagement_BrowserExtension",
    "version": "1.0",
    "description": "ZeitManagement_BrowserExtension",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_title": "ZeitManagement BrowserExtension"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "script": [
            {
                "js": "drag.js"
            }
        ]
    }
}